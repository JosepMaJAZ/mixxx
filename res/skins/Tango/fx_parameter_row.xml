<!--
Description:
  A row of up to 8 effect parameter knobs and up to 8 parameter buttons.
Variables:
  FxGroup : EffectRack1_EffectUnitX
  FxNum   : effect number
-->
<Template>
  <SetVariable name="FxGroup_FxNum">[<Variable name="FxGroup"/>_Effect<Variable name="FxNum"/>]</SetVariable>
  <WidgetGroup>
    <ObjectName>FxParameters</ObjectName>
    <Layout>horizontal</Layout>
    <Size>max,45f</Size>
    <Children>

      <Template src="skin:fx_parameter_knob.xml">
        <SetVariable name="parameter">1</SetVariable>
      </Template>
      <Template src="skin:fx_parameter_button.xml">
        <SetVariable name="parameter">1</SetVariable>
      </Template>

      <Template src="skin:fx_parameter_knob.xml">
        <SetVariable name="parameter">2</SetVariable>
      </Template>
      <Template src="skin:fx_parameter_button.xml">
        <SetVariable name="parameter">2</SetVariable>
      </Template>

      <Template src="skin:fx_parameter_knob.xml">
        <SetVariable name="parameter">3</SetVariable>
      </Template>
      <Template src="skin:fx_parameter_button.xml">
        <SetVariable name="parameter">3</SetVariable>
      </Template>

      <Template src="skin:fx_parameter_knob.xml">
        <SetVariable name="parameter">4</SetVariable>
      </Template>
      <Template src="skin:fx_parameter_button.xml">
        <SetVariable name="parameter">4</SetVariable>
      </Template>

      <Template src="skin:fx_parameter_knob.xml">
        <SetVariable name="parameter">5</SetVariable>
      </Template>
      <Template src="skin:fx_parameter_button.xml">
        <SetVariable name="parameter">5</SetVariable>
