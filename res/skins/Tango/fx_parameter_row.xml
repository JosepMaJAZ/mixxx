      <Template src="skin:fx_parameter_knob.xml">
        <SetVariable name="parameter">8</SetVariable>
      </Template>
      <Template src="skin:fx_parameter_button.xml">
        <SetVariable name="parameter">8</SetVariable>
      </Template>

    </Children>
  </WidgetGroup>
</Template>
